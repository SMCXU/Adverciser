<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/iv_list_artcle_item_logo"
        android:layout_width="150dp"
        android:layout_height="80dp"/>

    <TextView
        android:id="@+id/iv_list_artcle_item_title"
        android:layout_toRightOf="@+id/iv_list_artcle_item_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/black3"/>

    <View
        android:layout_below="@+id/iv_list_artcle_item_logo"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black_split_line"
        android:layout_marginTop="10dp"/>
</RelativeLayout>