<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="204dp">
    <ImageView
        android:id="@+id/tv_pager_home_top_pic_item_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/default_big_pic_bg"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/bg_advisor_brief_info_text_no_circle"/>

    <TextView
        android:id="@+id/tv_pager_home_top_pic_item_desc"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="怎样与银行保持高效的合作关系"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginBottom="@dimen/margin_14"
        android:layout_marginRight="@dimen/margin_10"/>

    <TextView
        android:id="@+id/tv_pager_home_top_pic_item_name_and_job"
        android:layout_above="@+id/tv_pager_home_top_pic_item_desc"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="王经理 招商银行某支行"
        android:textSize="12sp"
        android:layout_marginRight="@dimen/margin_10"
        android:textColor="@color/white"/>
</RelativeLayout>