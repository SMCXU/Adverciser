<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_view_loading_view_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_view_loading_view_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:src="@mipmap/loading_view_error"/>

    <TextView
        android:id="@+id/tv_view_loading_view_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_view_loading_view_error"
        android:layout_centerHorizontal="true"
        android:text="加载失败,点击屏幕重试"
        android:layout_marginTop="@dimen/margin_10"
        android:textColor="#ff717171"
        android:textSize="14dp"/>

</RelativeLayout>