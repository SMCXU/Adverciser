<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/margin_30"
    android:layout_marginRight="@dimen/margin_30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_only_border"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_20">

        <TextView
            android:id="@+id/tv_dialog_tip_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="提示"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_20"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_dialog_tip_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center_horizontal"
            android:textColor="@color/black"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@color/black_split_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/tv_dialog_tip_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_color_selector"
                android:gravity="center"
                android:text="确定"
                android:textColor="#0077FF"
                android:textStyle="bold"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black_split_line"/>

            <TextView
                android:id="@+id/tv_dialog_tip_cancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_color_selector"
                android:gravity="center"
                android:text="取消"
                android:textColor="#0077FF"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>